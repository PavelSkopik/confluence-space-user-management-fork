			<!-- start bulk-edit -->

<script type="text/javascript">
function validateBulkChecked( thisfield )
{
    var valid = false;
    for ( var i = 0; i < thisfield.length; i++ )
    {
       if ( thisfield[i].checked ) {
           valid = true;
       }
    }

    return valid;
}

function validateBulkForm( thisform )
{
    var valid = true;

    if ( validateBulkChecked( document.bulkedit.adminAction ) )
    {
        alert ( "Please choose an action" );
        valid = false;
    }
    else if ( document.bulkedit.users.value == null || document.bulkedit.users.value == "" ) {
        alert ( "Please specify users" );
        valid = false;
    }
    else if ( validateBulkChecked( document.bulkedit.groups ) )
    {
        alert ( "Please choose one or more groups" );
        valid = false;
    }

    return valid;
}
</script>


			<div class="sectionHeader">
				<h2>$action.getText("bulkedit.section.title")</h2>
				<a href="docustompermissionsmanage.action?key=$generalUtil.doubleUrlEncode($key)">&laquo; $action.getText("normalView.link.title")</a>
			</div>

            #set ($allGroups = $action.allGroups)
            #if($allGroups && $allGroups.size() > 0)
			<form id="bulkEdit" onsubmit="return validateBulkForm(this)" action="docustompermissionsmanage.action">
				<fieldset>
                    <input type="hidden" name="bulkEdit" value="1"/>
				    <input type="hidden" name="key" value="$generalUtil.doubleUrlEncode($key)"/>
					<label>1. $action.getText("bulkedit.form.label.actionTitle"):</label>
					<input type="radio" value="addUsersToGroups" name="adminAction"></input> $action.getText("bulkedit.form.radio.addUser.text")<br />
					<input type="radio" value="removeUsersFromGroups" name="adminAction"></input> $action.getText("bulkedit.form.radio.removeUser.text")
					<br />

					<label>2. $action.getText("bulkedit.form.label.userInputTitle"):</label>
					<input type="text" style="width:100%;" id="users" name="users"></input>
					<br />
					<ul class="formHelp">
						<li>$action.getText("form.example.commaSeparatedUsernames.text")</li>
						<li>$action.getText("form.example.commaSeparatedUsernames")</li>
					</ul>

					<label>3. $action.getText("bulkedit.form.label.selectGroupsTitle"):</label>
                    <ul>
                    #foreach ($group in $allGroups)
                        <li>
                            <input type="checkbox" id="groups" name="groups" value="$!group.name"> $generalUtil.htmlEncode($!group.name)</input> (<a href="docustompermissionsmanage.action?key=$generalUtil.doubleUrlEncode($key)&selectedGroup=$generalUtil.doubleUrlEncode($group.name)">Edit $generalUtil.htmlEncode($!group.name)</a>)
                        </li>
                    #end
                    </ul>

					<label>4. $action.getText("bulkedit.form.label.commitTitle"):</label>

