					<input type="submit" id="bulkEditSubmit" name="bulkEditSubmit" value="Commit"></input>
				</fieldset>
			</form>
            #else
            <p>$action.getText("error.noGroupsAvailable")</p>
            #end
            <!-- end bulk-edit -->