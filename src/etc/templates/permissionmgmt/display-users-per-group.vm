<html>
<head>
    <title>Group $action.selectedGroupName details</title>
</head>
<body>
		<!-- Display all users associated to given group -->
		<table border="0" cellpadding="5" cellspacing="0" width="100%">
		  <tr>
			<td class="confluenceTd"  valign="top" width="100%">
			#set ($group_name = $action.selectedGroupName)
			 <table class="grid">
			     <tr>
			         <th colspan=3>Total Users: $action.findUserCountForUserGroup($group_name)</th>
			     </tr>
			    #if ($group_name == "confluence-users")
						 <tr>
						     <td>-All Users In Confluence Wiki-</td>
						 </tr>
			    #else
				    #set ($users = $action.findUserDetailsForAGroup($group_name))
				    #if( $users.size() > 0)
				        #foreach($user in $users)
						 <tr>
						     <td>
						         <a href="$req.contextPath/display/~$generalUtil.doubleUrlEncode($user.name)">$generalUtil.htmlEncode($user.fullName)</a> <span class="smalltext">($user.name)</span><br>
						         <span class="smalltext">$generalUtil.maskEmail($user.email)</span>
						     </td>
						 </tr>
				        #end
				    #end
			    #end
			</td>
		  </tr>	
		</table>
</body>
</html>